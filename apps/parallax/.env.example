# Parallax App Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================

# Set to 'false' to use real GraphQL API instead of mock
EXPO_PUBLIC_USE_MOCK_API=true

# GraphQL endpoint (when not using mock API)
EXPO_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:8002/graphql

# ============================================
# AI Provider (Future Integration)
# ============================================

# Options: 'mock', 'openai', 'anthropic', etc.
EXPO_PUBLIC_AI_PROVIDER=mock

# AI API key (required for real AI providers)
EXPO_PUBLIC_AI_API_KEY=your-api-key-here

# ============================================
# Video Call Provider (Future Integration)
# ============================================

# Options: 'mock', 'agora', 'twilio', etc.
EXPO_PUBLIC_VIDEO_PROVIDER=mock

# Video provider API key (required for real providers)
EXPO_PUBLIC_VIDEO_API_KEY=your-api-key-here

# Agora-specific (if using Agora)
EXPO_PUBLIC_AGORA_APP_ID=your-agora-app-id

# Twilio-specific (if using Twilio)
EXPO_PUBLIC_TWILIO_ACCOUNT_SID=your-twilio-sid
EXPO_PUBLIC_TWILIO_API_KEY=your-twilio-key
EXPO_PUBLIC_TWILIO_API_SECRET=your-twilio-secret

# ============================================
# Feature Flags
# ============================================

# Enable/disable specific features during development
EXPO_PUBLIC_ENABLE_VIDEO_CALLS=true
EXPO_PUBLIC_ENABLE_AI_BIO=true
EXPO_PUBLIC_ENABLE_LOCATION=true

# ============================================
# Development
# ============================================

# Enable debug logging
EXPO_PUBLIC_DEBUG=false

# API timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000
